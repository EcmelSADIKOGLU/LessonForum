@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="container">
        <br />
        <div class="card-header clearfix">
            <h4 class="card-title float-left"> Mesajlar </h4>
        </div>

        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th width="20%">Gönderen</th>
                    <th width="50%">Konu</th>
                    <th width="20%">Tarih</th>
                    <th width="10%">Sil</th>
                    <th width="15%">Detaylar</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SenderMail</td>
                        <td>@item.Subject</td>
                        <td>@item.Date.ToString("dd-MM-yyyy")</td>

                        <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Contact/ContactDetails/@item.ContactID" class="btn btn-outline-success">Detaylar</a></td>
                    </tr>
                }

            </table>
            <br />
        </div>
    </div>
</div>

