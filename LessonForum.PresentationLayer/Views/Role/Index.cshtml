@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="container">
        <br />
        <div class="card-header clearfix">

            <h4 class="card-title float-left"> Rol Listesi</h4>
            <a href="/Role/AddRole" class="card-title float-right mr-3 p-2"><i class="now-ui-icons ui-1_simple-add " style="width: 20px; height:20px"></i></a>

        </div>
        <div class="card-body">
            <table class="table table-bordered">


                <tr>
                    <th width="70%">Rol</th>
                    <th width="15%">Sil</th>
                    <th width="15%">Düzenle</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>


                        <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Role/EditRole/@item.Id" class="btn btn-outline-success">Düzenle</a></td>
                    </tr>
                }

            </table>
            <br />
        </div>
    </div>
</div>

