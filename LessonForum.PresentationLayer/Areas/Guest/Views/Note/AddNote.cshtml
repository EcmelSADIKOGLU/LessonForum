@model AddLessonNoteViewModel
@{
    ViewData["Title"] = "AddNote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="container">
        <br />
        <div class="card-header ">
            <h4 class="card-title"> Ders Notu Ekle</h4>
        </div>
        <div class="card-body clearfix">

            <form method="post" enctype="multipart/form-data">
                <input hidden name="SubCategoryID" value="@ViewBag.subcategoryID" />
                <div class="form-group">
                    <label> Başlık </label>
                    <input class="form-control" type="text" asp-for="Title" required />
                </div>
                <div class="form-group">
                    <label> Açıklama </label>
                    <input class="form-control" type="text" asp-for="Description" required />
                </div>
                
                <label> Dosya </label>
                <input type="file" class="form-control" asp-for="LessonFile" required />

        
                <button type="submit" class="btn btn-outline-success float-right">Kaydet</button>
                <br />
                <br />
                <br />

            </form>
           
        </div>
    </div>
</div>

