@model Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="container">
        <br />
        <div class="card-header ">
            <h4 class="card-title"> İletişim</h4>
        </div>
        <div class="card-body clearfix">
            
            <form method="post">
                <div class="form-group">
                    <label> Mail Adresi </label>
                    <input class="form-control" type="email" asp-for="SenderMail" placeholder="Mail..." required />
                </div>
                <div class="form-group">
                    <label> Konu </label>
                    <input class="form-control" type="text" asp-for="Subject" placeholder="Konu" required />
                </div>
                <div class="form-group">
                    <label> Mesaj </label>
                    <input class="form-control" type="text" asp-for="Message" placeholder="Mesaj Yaz..." required />
                </div>


                <button id="submitButton" class="btn btn-outline-primary float-right">Mesajı Gönder</button>


                <script>
                    $(document).ready(function () {
                        $("#submitButton").on("click", function () {
                            alert('Your Message');
                        });

                    });
                </script>


            </form>
        </div>
    </div>
</div>








